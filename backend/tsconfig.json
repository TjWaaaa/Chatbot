{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"lib": ["ES2021.String"]
	},
	"ts-node": {
		"transpileOnly": true,
		"require": ["tsconfig-paths/register"]
	},
	"include": ["src", "prisma"],
	"exclude": ["node_modules"]
}
