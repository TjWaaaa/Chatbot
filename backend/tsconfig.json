{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules"]
}
